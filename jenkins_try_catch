pipeline{
    agent any 
    stages{
        stage('parallel'){
            parallel{
                stage(1st){
                    steps{
                      sh 'sleep 10'
                    }
                }
                stage('2nd'){
                    steps{
                      sh 'exit (1) '
                    }
                }
            }
        }
        stage('normal'){
            steps{
                sh 'sleep10'
            }
        }
    }
}