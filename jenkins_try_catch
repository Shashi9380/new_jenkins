pipeline{
    agent any 
    stages{
        stage('parallel'){
            parallel{
                stage('1st'){
                    steps{
                      sh 'sleep 10'
                    }
                }
                stage('2nd'){
                    steps{
                        script {
                          try {
                            sh 'exit (1) '
                          } catch (error) {
                             echo "caught an error: ${error}"
                          }
                        
                         
                       }
                    }
                }
            }
        }
        stage('normal'){
            steps{
                sh 'sleep 10'
            }
        }
    }
}